{
  "compilerOptions": {
    "target": "ESNext",  // Use modern JavaScript (ESNext)
    "module": "ESNext",  // Use ESNext module system
    "moduleResolution": "Node",  // Use Node.js resolution strategy for modules
    "strict": true,  // Enable strict mode for better type-checking
    "esModuleInterop": true,  // Allow default imports from CommonJS modules
    "skipLibCheck": true,  // Skip type checking of declaration files for better performance
    "jsx": "react-jsx",  // Use the new JSX transform from React 17+ (ensure you're on the latest React)
    "baseUrl": ".",  // Set the base directory for module resolution
    "paths": {
      "~/*": ["./app/*"]  // Path alias for easy imports
    },
    "resolveJsonModule": true,  // Allows you to import JSON files as modules
    "noEmit": true,  // Prevent TypeScript from emitting files (since Vite takes care of that)
    "allowJs": true  // Allow JavaScript files alongside TypeScript files
  },
  "include": [
    "**/*.ts",  // Include all TypeScript files
    "**/*.tsx",  // Include all TypeScript JSX files
    "**/.server/**/*.ts",  // Include .server directory files (if you're using this structure)
    "**/.server/**/*.tsx",  // Include .server directory JSX files
    "**/.client/**/*.ts",  // Include .client directory files (if you're using this structure)
    "**/.client/**/*.tsx"  // Include .client directory JSX files
  ],
  "exclude": [
    "node_modules"  // Exclude node_modules from being checked
  ]
}
